# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
PORT=5000
SECRET_KEY=your-secret-key-here

# Firebase Configuration
# Option 1: Set the JSON content directly (for deployment)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}

# Option 2: Use local file (for development)
# Place your serviceAccountKey.json file in the backend directory
# No environment variable needed - the code will automatically detect it

# Your Firebase Project Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30

# NLP Configuration
# Set to 'basic' to use only rule-based NLP (faster, lighter)
# Set to 'advanced' to use transformer models (slower, more accurate)
NLP_MODE=basic

# Model Configuration (if using advanced NLP)
TRANSFORMERS_CACHE_DIR=./models_cache
TRANSFORMERS_OFFLINE=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# CORS Configuration (for frontend integration)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,https://yourdomain.com

# Database Configuration
DB_TIMEOUT=10
DB_RETRY_ATTEMPTS=3

# Cache Configuration (if using caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# Development Settings
DEBUG=true
TESTING=false

# Production Settings (uncomment for production)
# FLASK_ENV=production
# DEBUG=false
# LOG_LEVEL=WARNING

# Security Settings
CORS_ALLOW_CREDENTIALS=false
MAX_CONTENT_LENGTH=1048576

# Feature Flags
ENABLE_CHAT_LOGS=true
ENABLE_USER_TRACKING=true
ENABLE_ANALYTICS=false

# Third-party Services (optional)
# STRIPE_SECRET_KEY=sk_test_...
# TWILIO_AUTH_TOKEN=...
# SENDGRID_API_KEY=...

# Monitoring (optional)
# SENTRY_DSN=https://...
# NEW_RELIC_LICENSE_KEY=...

# Deployment Configuration
# For Render, Railway, etc.
PYTHON_VERSION=3.9.18
BUILD_COMMAND=pip install -r requirements.txt
START_COMMAND=gunicorn app:app --bind 0.0.0.0:$PORT

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5